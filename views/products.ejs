<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head.ejs') %>
        <title>Sklep internetowy - produkty</title>
    </head>
    <body>
        <%- include('partials/navbar.ejs') %>
        <div class="container mt-4">
            <% if(newProduct) { %>
                <div class="alert alert-success" role="alert">
                    Dodano nowy produkt!
                </div>
            <% } %>
            <h1 class="mb-3">Lista produktów w bazie danych:</h1>
            <h6 class="mb-4">Zamówienia przyjmujemy telefonicznie :)</h6>
            <% if(!products || products.length == 0) { %>
                <div class="alert alert-info" role="alert">
                    Nie znaleziono żadnych produktów.
                </div>
            <% } else { %>
                <div class="row">
                <% for(product of products) { %>
                    <div class="card col-xs" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= product.price.toFixed(2).replace(".",",") %>zł</h6>
                        <p class="card-text">W magazynie: <%=product.quantity %></p>
                    </div>
                    </div>
                <% } %>
                </div>
            <% } %>
        </div>
    </body>
</html>